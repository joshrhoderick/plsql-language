{
    "comments": {
        "lineComment": "--",
        "blockComment": [
            [ "/*",   "*/" ]
        ]
    },
    // symbols used as brackets
    "brackets": [
        ["(",    ")"],
        ["{",    "}"],
        ["if",   "end if"],
        ["loop", "end loop"],
        ["case", "end case"]
        // ["begin", "end"]
    ],
    "autoClosingPairs": [
        {"open": "(",  "close": ")",  "notIn": ["string", "comment"]},
        {"open": "{",  "close": "}",  "notIn": ["string", "comment"]},
        {"open": "/*", "close": "*/", "notIn": ["string", "comment"]},
        {"open": "'",  "close": "'" , "notIn": ["string", "comment"]},
        {"open": "\"", "close": "\"", "notIn": ["string", "comment"]}
    ],
    "surroundingPairs": [
        ["(",  ")"],
        ["{",  "}"],
        ["\"", "\""],
        ["'",  "'"]
    ],
    "folding": {
        "markers": {
          "start": "^\\s*--\\s*#?region\\b",
          "end": "^\\s*--\\s*#?endregion\\b"
        }
      },
    // Default without $# (dont' work with getWordRangeAtPosition() according to issue #42649)
    "wordPattern":
        "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
